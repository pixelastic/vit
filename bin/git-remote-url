#!/usr/bin/env zsh
# Gets the url of a given remote
# Usage:
# $ git-remote-url
# $ git-remote-url {remoteName}
#
# If no remote specified, will use the current one

local remote=$1
[[ $remote == '' ]] && remote=$(git remote-current)

# Find the remote url
local remoteUrl="$(git config --get remote.${remote}.url)"

# Fails if no remote
if [[ $remoteUrl == '' ]]; then
  exit 1
fi

echo $remoteUrl
