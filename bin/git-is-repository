#!/usr/bin/env ruby
require_relative '../lib/git_helper'

# Checks if the specified directory is a git repository
# Usage:
#   $ git is-repository 
#   $ git is-repository ./filepath
class GitIsRepository
  include GitHelper
  def initialize(*args)
    @target = args[0]
  end

  def run
    exit 1 unless repository?(@target)
    exit 0
  end
end
GitIsRepository.new(*ARGV).run
